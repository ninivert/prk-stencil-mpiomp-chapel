#!/bin/bash -l
#SBATCH --job-name="mpiopenmp-stencil-7"
#SBATCH --account="s1249"
#SBATCH --time=00:00:01
#SBATCH --nodes=128
#SBATCH --partition=normal
#SBATCH --constraint=gpu
#SBATCH --output=result-mpiopenmp-stencil-7.out
## https://user.cscs.ch/access/running/#electrical-groups
#SBATCH --switches=1
#SBATCH --ntasks-per-core=1
#SBATCH --ntasks-per-node=1
## disable hyperthreading. On Piz Daint (XC50) Intel Xeon E5-2690 v3 has 12 cores, 2 threads per core
#SBATCH --cpus-per-task=12

export OMP_NUM_THREADS=$SLURM_CPUS_PER_TASK

echo ">>> module list"
module list

echo ">>> srun log"
srun --exclusive ../mpiomp/MPIOPENMP/Stencil/stencil $OMP_NUM_THREADS 10000 2896
